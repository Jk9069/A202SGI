<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="15dp" android:paddingLeft="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceRangepref_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/priceRangepref_summary"/>

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/pricerangepref_seekbar"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:max="4"/>

    <TextView
        android:id="@+id/pricerangepref_howExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"/>

</LinearLayout>