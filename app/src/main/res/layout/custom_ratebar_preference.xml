<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="10dp">

    <TextView
        android:id="@+id/ratingbarpref_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ratingBarpref_title"/>

    <TextView
        android:id="@+id/ratingbarpref_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text = "@string/ratingBarpref_summary"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbarpref_rateBar"
        android:layout_gravity="center"
        android:numStars="5"
        android:paddingTop="3dp" />

</LinearLayout>